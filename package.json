{
  "name": "search_umd_courses",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "build": "npm run clean && npm run copy && tsc",
    "build:start": "npm run build && npm run start",
    "clean": "rm -rf dist/",
    "copy": "npm run create-dirs && npm run copy-non-ts && npm run copy-incompatible-tests",
    "copy-non-ts": "cp src/config.json dist/src && cp src/views/search.html dist/src/views",
    "copy-incompatible-tests": "cp -r test/unit/routes dist/test/unit",
    "create-dirs": "mkdir -p dist/src/views && mkdir -p dist/test/unit && mkdir -p logs",
    "start": "node dist/src/server.js",
    "watch": "nodemon",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "npm run test:unit",
    "test:unit": "mocha dist/test/common.js 'dist/test/unit/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristianNguyendinh/umd-course-search.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ChristianNguyendinh/umd-course-search/issues"
  },
  "homepage": "https://github.com/ChristianNguyendinh/umd-course-search#readme",
  "dependencies": {
    "@types/joi": "^13.4.5",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-joi-router": "^5.0.3",
    "@types/koa-router": "^7.0.32",
    "@types/koa-views": "^2.0.3",
    "@types/mongodb": "^3.1.7",
    "@types/winston": "^2.4.4",
    "cheerio": "^1.0.0-rc.2",
    "koa": "^2.5.2",
    "koa-joi-router": "^5.1.0",
    "koa-router": "^7.4.0",
    "koa-views": "^6.1.4",
    "lodash": "^4.17.10",
    "module-alias": "^2.1.0",
    "mongodb": "^3.1.0",
    "request": "^2.87.0",
    "typescript": "^3.0.3",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.5",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^5.0.2",
    "@types/sinon-chai": "^3.2.0",
    "@types/supertest": "^2.0.6",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "proxyquire": "^2.1.0",
    "sinon": "^6.2.0",
    "sinon-chai": "^3.2.0",
    "supertest": "^3.3.0",
    "tslint": "^5.11.0"
  },
  "_moduleAliases": {
    "@root": "dist/src",
    "@routes": "dist/src/routes",
    "@services": "dist/src/services"
  }
}
